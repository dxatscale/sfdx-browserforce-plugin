{
  "compilerOptions": {
    "outDir": "lib",
    "module": "commonjs",
    "target": "es2018",
    "lib": ["dom", "ES2018"],
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./src/**/*.test.ts", "./src/**/*.e2e-spec.ts"]
}
